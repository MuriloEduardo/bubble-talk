<!DOCTYPE html>
<html lang="pt-BR">
	<head>
		<meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Bubble Talk Login</title>

		<!-- Bootstrap Core CSS -->
        <link href="../libs/bootstrap/bootstrap.min.css" rel="stylesheet">

        <!-- Animate CSS -->
        <link href="../libs/animate.css/animate.min.css" rel="stylesheet">

        <!-- Custom CSS -->
        <link href="site/css/style-site.css" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
	</head>
	<body class="bg-animate bg-animate-color">
		<div class="vertical-center">
			<div class="container login">
				<div class="col-md-4 col-md-offset-4">
					<div id="logotipo" class="bg-animate bg-animate-color"><i class="material-icons">bubble_chart</i></div>
					<div class="form-group">
						<h2 class="text-center">Entre, fique a vontade!</h2>
					</div>
					<div class="row">
						<div class="col-md-6 col-sm-6 col-xs-6">
							<div class="form-group">
								<button class="btn btn-primary form-control">Facebook</button>
							</div>
						</div>
						<div class="col-md-6 col-sm-6 col-xs-6">
							<div class="form-group">
								<button class="btn btn-danger form-control">Google</button>
							</div>
						</div>
					</div>
					<div class="separator"><div>ou</div></div>
					<% if (message_login.length){ %>
					<div class="alert alert-danger">
						<a href="#" target="_self" class="close" data-dismiss="alert" aria-label="close">&times;</a>
						<strong>Óh não!</strong> <%= message_login %>
					</div>
					<% } %>
					<form action="/api/login" method="post" autocomplete="off">
						<div class="form-group">
							<i class="material-icons">person</i>
							<input type="text" class="form-control" placeholder="Seu email" name="email" required>
						</div>
						<div class="form-group">
							<i class="material-icons">vpn_key</i>
							<input type="password" class="form-control" placeholder="Sua senha" name="senha" required>
						</div>
						<div class="form-group esqueci">
							<a href="/experimente-gratis">Recupere sua senha facilmente</a>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-default form-control">Entrar</button>
						</div>
					</form>
					<br>
					<div class="form-group text-center">
						<a href="/experimente-gratis">Novo por aqui? Cadastre-se agora mesmo</a>
					</div>
				</div>
			</div>
		</div>
		<!-- jQuery -->
        <script src="../libs/jquery/jquery.min.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="../libs/bootstrap/bootstrap.min.js"></script>
		<script>$(document).ready(function(){$('input[type="text"]').focus()})</script>
	</body>
</html>